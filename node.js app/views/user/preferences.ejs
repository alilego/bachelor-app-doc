<% include ../partials/header %>
<div class="container bgc-body">
    <div class="row">
        <h1 style="text-align: center">Preferinte</h1>
        <div style="width: 25%; margin: 25px auto;">
            <form action="/user/preferences?_method=PUT" method="POST">
                <div class="checkbox">
                    <label data-toggle="tooltip" data-placement="right" title="Afisarea implicita a hartilor se va face centrat pe orasul setat in datele personale">
                        <input type="checkbox" name="user[alwaysCenterCity]" <% if(user.alwaysCenterCity){ %> checked <% } %>>Centrare pe orasul resedinta
                    </label>
                </div>
                <div class="checkbox">
                    <label data-toggle="tooltip" data-placement="right" title="Pentru limitarea numarului de masuratori folosite in constructia hartilor. Astfel, hartile vor avea o granularitate mai mare.">
                        <input type="checkbox" name="user[dataEconomy]" <% if(user.dataEconomy){ %> checked <% } %>>Economie la transmisia de date
                    </label>
                </div>
                <div class="form-inline form-group">
                    <input class="form-control" type="text" name="user[maxLines]" style="width:20%" value="<%= user.maxLines %>" placeholder="linii">
                    <span>&nbspx&nbsp</span>
                    <input class="form-control" type="text" name="user[maxColumns]" style="width:20%" value="<%= user.maxColumns %>" placeholder="coloane">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Actualizez!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>

<% include ../partials/footer %>