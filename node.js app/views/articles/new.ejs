<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Adaug articol</h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/articles" id="article" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="titlu">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageCover" placeholder="adresa imaginii principale">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="scurta descriere">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="15" cols="100" name="htmlContent" form="article" placeholder="Textul articolului aici, in format html..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Salvez!</button>
                </div>
            </form>
        </div>
    </div>
</div>
