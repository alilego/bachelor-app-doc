<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= article.name %></h1>
        <div style="width: 40%; margin: 25px auto;">
            <form id="article" action="/articles/<%= article._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="article[title]" value="<%= article.title %>" placeholder="titlu">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[imageCover]" value="<%= article.imageCover %>" placeholder="adresa imaginii principale">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[description]" value="<%= article.description %>" placeholder="scurta descriere">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="15" cols="100" name="article[htmlContent]" form="article" placeholder="Textul articolului aici, in format html..."><%= article.htmlContent %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Salvez!</button>
                </div>
            </form>
            <a href="/articles/<%= article._id %>">Renunt</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>